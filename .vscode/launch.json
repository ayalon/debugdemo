{
    "configurations": [
        {
            "address": "localhost",
            "name": "Attach to local",
            "port": 9229,
            "request": "attach",
            "type": "node",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            // "outFiles": [
            //     "${workspaceFolder}/frontend/.nuxt/**/*",
            // ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "outputCapture": "std",
            "localRoot": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/nuxi/bin/nuxi.mjs",
            "args": [
                "dev"
            ],
            "outFiles": [
                "${workspaceFolder}/frontend/.nuxt/**/*",
            ]
        }
    ],
    "trace": true
}
